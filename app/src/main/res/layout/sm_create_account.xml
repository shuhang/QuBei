<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <per.goweii.actionbarex.common.ActionBarCommon
        android:id="@+id/abc"
        android:background="@color/white"
        style="@style/ActionBar.Common.Back"
        app:abc_leftIconColor="@color/sm_blue"
        app:abc_titleTextSize="18sp"
        app:abc_titleText="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="true"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:text="创建账号" />

    <TextView
        android:id="@+id/sm_create_account_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="true"
        android:singleLine="false"
        android:textColor="@color/middle_gray"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:text="登录或创建账号即代表同意用户协议、隐私条款" />

    <com.pku45a.difference.widget.InputView
        android:id="@+id/sm_create_account_input_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp" />

    <com.pku45a.difference.widget.InputView
        android:id="@+id/sm_create_account_input_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp" />

    <Button
        android:id="@+id/sm_create_account_button_get_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/corner_bg_blue_25"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:stateListAnimator="@null"
        android:text="获取验证码"
        android:textSize="16sp"
        android:textColor="@color/white"/>

</LinearLayout>