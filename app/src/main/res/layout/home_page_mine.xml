<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/app_yellow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/home_page_mine_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@color/background"
                android:scaleType="centerCrop"
                app:riv_corner_radius="20dp"
                app:riv_mutate_background="true"
                tools:src="@drawable/image_holder"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:includeFontPadding="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="纯洁帝完美" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/corner_bg_10">

                <TextView
                    android:id="@+id/home_page_mine_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="现金（元）" />

                <TextView
                    android:id="@+id/home_page_mine_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="true"
                    android:singleLine="true"
                    android:textColor="#CD5C5C"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/home_page_mine_money_title"
                    android:layout_marginLeft="20dp"
                    android:text="2.96" />

                <Button
                    android:id="@+id/home_page_mine_get_money"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text="去提现 >"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/home_page_mine_money"
                    android:stateListAnimator="@null"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_rank_1"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/corner_bg_10">

                <TextView
                    android:id="@+id/home_page_mine_coin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="金币" />

                <TextView
                    android:id="@+id/home_page_mine_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="true"
                    android:singleLine="true"
                    android:textColor="#CD5C5C"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/home_page_mine_coin_title"
                    android:layout_marginLeft="20dp"
                    android:text="201,308" />

                <Button
                    android:id="@+id/home_page_mine_change_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text="去兑换 >"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/home_page_mine_coin"
                    android:stateListAnimator="@null"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_rank_1"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
