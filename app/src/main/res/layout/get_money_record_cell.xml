<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_get_money_record_cell"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:background="@drawable/corner_bg_white_12"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/corner_bg_10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/layout_get_money_record_cell_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:includeFontPadding="true"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="13sp"
                android:text="2019-11-29 16:17:19" />

            <TextView
                android:id="@+id/layout_get_money_record_cell_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:includeFontPadding="true"
                android:singleLine="true"
                android:textColor="#FF4B4C"
                android:textSize="14sp"
                android:gravity="right"
                android:text="提现成功" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#EBEBEB"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="19.5dp"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/layout_get_money_record_cell_left_image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/layout_get_money_record_cell_money1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/layout_get_money_record_cell_left_image"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="1dp"
                android:includeFontPadding="true"
                android:singleLine="true"
                android:textColor="@color/app_text_color_black"
                android:textSize="16sp"
                android:text="微信红包10元" />

            <TextView
                android:id="@+id/layout_get_money_record_cell_money2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/layout_get_money_record_cell_left_image"
                android:layout_alignLeft="@+id/layout_get_money_record_cell_money1"
                android:layout_marginTop="38dp"
                android:includeFontPadding="true"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="-10000金币" />

            <TextView
                android:id="@+id/layout_get_money_record_cell_money3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/layout_get_money_record_cell_left_image"
                android:layout_alignLeft="@+id/layout_get_money_record_cell_money1"
                android:layout_alignParentBottom="true"
                android:includeFontPadding="true"
                android:singleLine="true"
                android:textColor="@color/app_text_color_black"
                android:textSize="14sp"
                android:text="总计¥10" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="24dp"
            android:background="@color/app_line_color_gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:id="@+id/layout_get_money_record_cell_bottom"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:includeFontPadding="true"
                android:singleLine="true"
                android:textColor="@color/app_text_color_black"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/corner_bg_yellow_8"
                android:text="已到账" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>