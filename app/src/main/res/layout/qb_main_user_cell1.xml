<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="70dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/qb_main_user_cell1_temp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:background="#185CEE"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:riv_corner_radius="48dp"
        app:riv_mutate_background="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/qb_main_user_cell1_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:src="@mipmap/qb_mine_temp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="46dp"
        app:riv_mutate_background="true" />

    <TextView
        android:id="@+id/qb_main_user_cell1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="#333333"
        android:text="13568921535"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp" />

</RelativeLayout>