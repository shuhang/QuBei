<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <per.goweii.actionbarex.common.ActionBarCommon
        android:id="@+id/abc"
        android:background="@color/transparent"
        style="@style/ActionBar.Common.Back"
        app:abc_leftIconColor="#838383"
        app:abc_titleTextSize="18sp"
        app:abc_titleTextColor="@color/black"
        app:abc_titleText="添加紧急联系人" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EEEEEE"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#979797"
        android:textSize="13sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="23dp"
        android:text="紧急联系人姓名" />

    <EditText
        android:id="@+id/qb_add_contact_name"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@drawable/corner_bg_gray_10"
        android:textSize="16sp"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textColorHint="#949494"
        android:hint="请输入紧急联系人姓名"
        android:layout_marginLeft="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#979797"
        android:textSize="13sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="23dp"
        android:text="联系方式" />

    <EditText
        android:id="@+id/qb_add_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@drawable/corner_bg_gray_10"
        android:textSize="16sp"
        android:maxLength="11"
        android:textColor="@color/black"
        android:textColorHint="#949494"
        android:hint="请输入紧急联系人电话号码"
        android:inputType="phone"
        android:layout_marginLeft="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/qb_add_contact_button_add"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/corner_bg_blue_22"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="确认添加" />

</LinearLayout>