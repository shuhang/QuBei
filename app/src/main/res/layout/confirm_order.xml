<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <per.goweii.actionbarex.common.ActionBarCommon
        android:id="@+id/abc"
        style="@style/ActionBar.Common.Back"
        app:abc_titleTextSize="18sp"
        app:abc_titleText="确认订单" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="78dp"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_address_gray"/>

        <EditText
            android:id="@+id/confirm_order_name"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="27dp"
            android:hint="点击填写收货人"
            android:background="@color/white"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="@color/app_text_color_black"
            android:textColorHint="@color/app_text_color_black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/confirm_order_address"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="57dp"
            android:hint="点击填写收货地址"
            android:background="@color/white"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:src="@drawable/ic_arrow_right_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#EBEBEB"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginTop="190dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"
            android:singleLine="true"
            android:textColor="@color/app_text_color_black"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:text="默认分类" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="58dp"
            android:background="@color/light_gray"
            android:layout_marginRight="19dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"
            android:singleLine="true"
            android:textColor="#161616"
            android:textSize="14sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="82dp"
            android:text="耳机AKG Y20U" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="153dp"
            android:background="#EBEBEB"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="169dp"
            android:text="文案文案文案文案文案文案" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"
            android:singleLine="true"
            android:textColor="@color/app_text_color_black"
            android:textSize="15sp"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="160dp"
            android:text="实付：300趣币" />

        <Button
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/app_yellow"
            android:text="确认订单"
            android:textSize="16sp"
            android:stateListAnimator="@null"
            android:textColor="@color/app_text_color_black"/>

    </RelativeLayout>

</RelativeLayout>