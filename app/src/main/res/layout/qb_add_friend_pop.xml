<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/black" />

    <View
        android:id="@+id/qb_add_friend_pop_temp"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:clipChildren="false"
        android:background="@drawable/corner_bg_white_12"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="46dp"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:layout_alignTop="@+id/qb_add_friend_pop_temp"
        android:src="@mipmap/qb_heart" />

    <TextView
        android:id="@+id/qb_add_friend_pop_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/qb_add_friend_pop_temp"
        android:layout_marginTop="49dp"
        android:textSize="19sp"
        android:textColor="#333333"
        android:text="16619852394请求添加你为好友" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_alignTop="@+id/qb_add_friend_pop_temp"
        android:layout_marginTop="88dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/qb_add_friend_pop_temp"
        android:layout_marginTop="89dp"
        android:weightSum="2"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/qb_add_friend_pop_button_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:textColor="#185CEE"
            android:text="接受" />

        <Button
            android:id="@+id/qb_add_friend_pop_button_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:textColor="#999999"
            android:text="取消" />

    </LinearLayout>

</RelativeLayout>