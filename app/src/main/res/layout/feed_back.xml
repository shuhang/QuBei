<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <per.goweii.actionbarex.common.ActionBarCommon
        android:id="@+id/abc"
        style="@style/ActionBar.Common.Back"
        app:abc_titleTextSize="18sp"
        app:abc_titleText="使用反馈" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/corner_bg_gray_12"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <EditText
            android:id="@+id/feed_back_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#F8F8F8"
            android:gravity="top"
            android:hint="在此留下您的建议"
            android:maxLines="1000000"
            android:textColor="@color/app_text_color_black"
            android:textColorHint="#999999"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/corner_bg_gray_12"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_phone"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17.5dp"
            />

        <EditText
            android:id="@+id/feed_back_phone"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="17dp"
            android:background="#F8F8F8"
            android:gravity="center_vertical"
            android:hint="输入您的联系方式"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="phone"
            android:textColor="@color/app_text_color_black"
            android:textColorHint="#999999"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="45dp"
        android:text="提交"
        android:textColor="@color/app_text_color_black"
        android:textSize="16sp"
        android:stateListAnimator="@null"
        android:background="@drawable/corner_bg_yellow_12"/>

</LinearLayout>