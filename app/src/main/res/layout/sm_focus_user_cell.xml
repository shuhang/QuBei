<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sm_focus_user_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            android:scaleType="centerCrop"
            app:riv_corner_radius="80dp"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/sm_focus_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="用户名"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_toRightOf="@id/sm_focus_user_head"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/sm_focus_user_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="@color/middle_gray"
            android:textSize="15sp"
            android:text="标签"
            android:layout_alignLeft="@id/sm_focus_user_name"
            android:layout_below="@id/sm_focus_user_name"
            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:id="@+id/sm_focus_user_layout_change_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/sm_focus_user_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/corner_bg_gray_10">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ne_mine_honor"/>

            <TextView
                android:id="@+id/sm_focus_user_text_change_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/sm_blue"
                android:textSize="12sp"
                android:text="0"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sm_focus_user_layout_risk"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/sm_focus_user_layout_change_type"
            android:layout_alignTop="@+id/sm_focus_user_layout_change_type"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner_bg_gray_10">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ne_mine_risk"/>

            <TextView
                android:id="@+id/sm_focus_user_text_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/sm_red"
                android:textSize="12sp"
                android:text="0"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/sm_focus_user_focus"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/corner_bg_solid_blue_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/sm_blue"
            android:text="关注"/>

    </RelativeLayout>

</LinearLayout>