<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <per.goweii.actionbarex.common.ActionBarCommon
        android:id="@+id/abc"
        android:background="@color/white"
        style="@style/ActionBar.Common.Back"
        app:abc_leftIconColor="@color/sm_blue"
        app:abc_titleTextSize="18sp"
        app:abc_titleTextColor="@color/black"
        app:abc_titleText="设置标签" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/heavy_gray"/>

    <EditText
        android:id="@+id/sm_set_tag_input"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:gravity="top"
        android:maxLength="20"
        android:hint="设置您的个性标签（0/20）"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textColorHint="@color/middle_gray"
        android:textSize="15sp" />

    <Button
        android:id="@+id/sm_set_tag_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/corner_bg_blue_25"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:stateListAnimator="@null"
        android:text="保存"
        android:textSize="16sp"
        android:textColor="@color/white"/>

</LinearLayout>